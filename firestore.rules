rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Función para verificar si el usuario está autenticado
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Función para verificar si el usuario es el propietario del documento
    function isOwner(userId) {
      return request.auth.token.email == userId;
    }
    
    // Función para verificar si el usuario es tutor
    function isTutor() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/user/$(request.auth.token.email)) &&
             get(/databases/$(database)/documents/user/$(request.auth.token.email)).data.isTutor == true;
    }

    // COLECCIÓN: user
    // Los usuarios pueden leer y escribir su propia información
    // Todos los usuarios autenticados pueden leer información de otros usuarios (para buscar tutores)
    match /user/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && isOwner(userId);
      allow create: if isAuthenticated() && isOwner(userId);
      allow update: if isAuthenticated() && isOwner(userId);
      allow delete: if isAuthenticated() && isOwner(userId);
    }
    
    // COLECCIÓN: course
    // Las materias son de solo lectura para usuarios autenticados
    // Solo administradores pueden modificar (por ahora bloqueado)
    match /course/{courseId} {
      allow read: if isAuthenticated();
      allow write: if false; // Solo administradores - configurar después
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }
    
    // COLECCIÓN: major
    // Las carreras son de solo lectura para usuarios autenticados
    // Solo administradores pueden modificar (por ahora bloqueado)
    match /major/{majorId} {
      allow read: if isAuthenticated();
      allow write: if false; // Solo administradores - configurar después
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }
    
    // COLECCIÓN: availabilities
    // Todos pueden leer disponibilidades (para buscar tutores)
    // Solo el tutor propietario puede crear/modificar sus disponibilidades
    match /availabilities/{availId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && 
                     isTutor() && 
                     isOwner(request.resource.data.tutorEmail);
      allow update: if isAuthenticated() && 
                     isTutor() && 
                     isOwner(resource.data.tutorEmail);
      allow delete: if isAuthenticated() && 
                     isTutor() && 
                     isOwner(resource.data.tutorEmail);
    }
    
    // COLECCIÓN: tutoring_sessions (para futuras implementaciones)
    // Solo los participantes (tutor y estudiante) pueden ver y modificar las sesiones
    match /tutoring_sessions/{sessionId} {
      allow read: if isAuthenticated() && 
                     (isOwner(resource.data.tutorEmail) || 
                      isOwner(resource.data.studentEmail));
      allow create: if isAuthenticated() && 
                       (isOwner(request.resource.data.tutorEmail) || 
                        isOwner(request.resource.data.studentEmail));
      allow update: if isAuthenticated() && 
                       (isOwner(resource.data.tutorEmail) || 
                        isOwner(resource.data.studentEmail));
      allow delete: if isAuthenticated() && 
                       (isOwner(resource.data.tutorEmail) || 
                        isOwner(resource.data.studentEmail));
    }
    
    // COLECCIÓN: payments (para futuras implementaciones)
    // Solo los participantes pueden ver los pagos
    // Los pagos se crean/modifican solo por la aplicación (funciones serverless)
    match /payments/{paymentId} {
      allow read: if isAuthenticated() && 
                     (isOwner(resource.data.tutorEmail) || 
                      isOwner(resource.data.studentEmail));
      allow write: if false; // Los pagos se manejan por Cloud Functions
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }
    
    // REGLAS ESPECIALES: Para desarrollo y testing
    // Puedes habilitar estas reglas temporalmente para testing
    // ⚠️ REMOVER EN PRODUCCIÓN ⚠️
    /*
    match /{document=**} {
      allow read, write: if true; // ⚠️ SOLO PARA DESARROLLO - REMOVER EN PRODUCCIÓN
    }
    */
  }
} 